<!DOCTYPE html>
<html>
	<head>
		<title>Password reset</title>
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
		<style>
			
			form{
				width: 40%;
				text-align: center;
				margin: 0 auto;
				padding: 80px 40px;
				background-color: lightskyblue;
				border-radius: 10px;
			}

			body{
				background-color: lightslategray;
			}
			

		</style>
	</head>
	<body>
		
		<nav class='navbar navbar-expand-lg navbar-default'>
 			<div class='container-fluid'>
				<div class='navbar-header'>
				 	<a class='navbar-brand' href='/'>Yelpcamp</a>
				</div>
					<div class='collpase navbar-collapse'>
						<ul class='nav navbar-nav navbar-right'>
							<% if(!currentUser){ %>
								<li><a href='/login'>Login</a></li>
								<li><a href='/register'>Sign Up</a></li>
						 <%	}else{ %>
								<li> <a>logged in as <%= currentUser.username %></a> </li>
								<li><a href='/logout'>Log Out</a></li>
						 <% } %> 	
						 
						</ul>	
		    		</div>
			</div>
		</nav>

		<div class="container">
			<% if(error && error.length > 0){ %>
				<div class="alert alert-danger" role="alert">
					<%= error %>
				</div>
			<% } %>
			<% if(success && success.length > 0){ %>
				<div class="alert alert-success" role="alert">
					<%= success %>
				</div>
			<% } %>
		</div>
		
<div class='container'>
	<div class='row'>
		<div class='col-md-12'>
		<form action='/change_password/<%=token%>' method='POST'>
			<h2>Reset Password</h2>
			<div class='form-group'>
			<label for='password'>New password</label>
			<input name='password' autofocus class='form-control' placeholder='Enter new password'>
            <label for='confirm'>Confirm new password</label>
			<input name='confirm' autofocus class='form-control' placeholder='Confirm new password'>
		</div>
			<div class='form-group'>
				<button type='submit' class='btn btn-success submit'>Submit</button>
			</div>
		</form>
	</div>
</div>
	
<%- include('../../partials/footer') %>